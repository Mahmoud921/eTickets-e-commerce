@model Actor

@{
    ViewData["Title"] = "Update Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" asp-controller="Actor" class="form" method="post" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePectureURL" class="form-label"></label>
                        <input asp-for="ProfilePectureURL" class="form-control" id="ProfilePectureURL" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="form-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const profilePicInput = document.getElementById("ProfilePectureURL");
            const profilePicPreview = document.getElementById("ProfilePicturePreview");

            // Set initial preview on page load
            profilePicPreview.src = profilePicInput.value;

            // Update preview on input change
            profilePicInput.addEventListener("input", function () {
                profilePicPreview.src = profilePicInput.value;
            });
        });
    </script>
}
